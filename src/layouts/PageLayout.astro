---
import DefaultLayout from './DefaultLayout.astro';


export interface Props {
  url: string;
	content: {
		title: string;
		pubDate?: string;
		updatedDate?: string;
	};
}

const {
	content: { title, pubDate, updatedDate },
url, compiledContent
} = Astro.props;
---

<DefaultLayout title={title} description={compiledContent()}>
      <section>
			<article>
        <h2><a href={url}>{ title }</a></h2>
        <div class="sans-serif">
				<slot />
        </div>
			</article>
      </section>
</DefaultLayout>
